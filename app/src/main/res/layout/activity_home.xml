<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <!--Top two buttons-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Profile"/>

        <Button
            android:id="@+id/setting"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Setting"/>

    </GridLayout>

    <!--Spinner and Image Button-->
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerFamily"
        android:spinnerMode="dropdown"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="140dp"
        android:gravity="center_horizontal"
        android:prompt="@string/spinnerTitle"/>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/SpinnerFamily"
        android:layout_marginTop="30dp"
       />

    <!--All bottom buttons-->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:id="@+id/followUp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="320dp"
            android:text="Follow up"/>
        <Button
            android:layout_row="2"
            android:layout_column="1"
            android:id="@+id/statistics"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/followUp"
            android:layout_marginTop="50dp"
            android:text="Statistics" />
        <Button
            android:layout_row="3"
            android:layout_column="1"
            android:id="@+id/chat"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/statistics"
            android:layout_marginTop="50dp"
            android:text="Chat" />

        <Button
            android:layout_row="1"
            android:layout_column="3"
            android:id="@+id/tasks"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="320dp"
            android:text="Pool Tasks"/>
        <Button
            android:layout_row="2"
            android:layout_column="3"
            android:id="@+id/history"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tasks"
            android:layout_marginTop="50dp"
            android:text="History" />
        <Button
            android:layout_row="3"
            android:layout_column="3"
            android:id="@+id/points"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@+id/history"
            android:layout_marginTop="50dp"
            android:text="Points" />


    </GridLayout>


</RelativeLayout>