<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_gravity="fill"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name_of_task"
                        android:textColor="@color/allAppPurple"
                        android:layout_margin="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/NameOfTask"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-10dp"
                            android:drawableRight="@drawable/ic_baseline_task_alt_24"
                            android:hint="@string/name_of_task"
                            android:paddingLeft="12dp"/>

                        <Button
                            android:id="@+id/UpdateName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/whitePurple"
                            android:textColor="@android:color/black"
                            android:text="@string/update"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bonus points"
                        android:textColor="@color/allAppPurple"
                        android:layout_margin="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/BonusPoints"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-10dp"
                            android:drawableRight="@drawable/ic_baseline_star_rate_24"
                            android:hint="Bonus points"
                            android:paddingLeft="12dp"/>

                        <Button
                            android:id="@+id/UpdateBonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/whitePurple"
                            android:textColor="@android:color/black"
                            android:text="@string/update"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Picture of the task"
                        android:textColor="@color/allAppPurple"
                        android:layout_gravity="center_horizontal"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/AddPic"
                        android:layout_width="250dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:text="Add a Picture"/>

                    <Button
                        android:id="@+id/ImageButtonUpdate"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/whitePurple"
                        android:textColor="@android:color/black"
                        android:text="@string/update"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textColor="@color/allAppPurple"
                        android:layout_margin="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/Description"
                            android:layout_width="200dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="-10dp"
                            android:drawableRight="@drawable/ic_baseline_text_snippet_24"
                            android:hint="Description"
                            android:paddingLeft="12dp"/>

                        <Button
                            android:id="@+id/DescriptionUpdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/whitePurple"
                            android:textColor="@android:color/black"
                            android:text="@string/update"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ChooseChildText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_horizontal"
                        android:text="Reassociate Child:"
                        android:textColor="@color/allAppPurple"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/SpinnerChooseChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:gravity="center_horizontal"
                        android:prompt="@string/titleParentSpinner"
                        android:spinnerMode="dropdown" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp"
            android:layout_marginTop="-30dp">

            <Button
                android:id="@+id/Back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textAllCaps="false"
                android:layout_marginBottom="5dp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
